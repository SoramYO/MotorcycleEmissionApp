<UserControl x:Class="MotorcycleEmissionUI.Station.ScheduleInspectionView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="clr-namespace:MotorcycleEmissionUI.Station"
             mc:Ignorable="d">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0"
                Text="Sắp Xếp Lịch Kiểm Định"
                   FontSize="20"
                FontWeight="Bold"
                Margin="0,0,0,15"/>

        <!-- Search and Filter Section -->
        <Grid Grid.Row="1"
                Margin="0,0,0,15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBox Grid.Column="0"
                    x:Name="SearchPlateTextBox"
                     Margin="0,0,10,0"
                    Padding="5"
                    FontSize="14"/>

            <DatePicker Grid.Column="1"
                    x:Name="ScheduleDatePicker"
                        Margin="0,0,10,0"
                    Width="150"/>

            <Button Grid.Column="2"
                    x:Name="SearchButton"
                    Content="Tìm Kiếm"
                    Padding="15,8"
                    Background="#2E75B6"
                    Foreground="White"
                    Click="SearchButton_Click"/>
        </Grid>

        <!-- Form for scheduling inspections -->
        <GroupBox Grid.Row="2"
                Header="Thông Tin Đặt Lịch Kiểm Định"
                Margin="0,0,0,15">
            <Grid Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Vehicle Information -->
                <TextBlock Grid.Row="0"
                        Grid.Column="0"
                        Text="Biển Số Xe:"
                           FontWeight="Bold"
                        Margin="0,5,10,5"/>
                <TextBox Grid.Row="0"
                        Grid.Column="1"
                        x:Name="PlateNumberTextBox"
                         Margin="0,5,10,5"
                        IsReadOnly="True"/>

                <TextBlock Grid.Row="0"
                        Grid.Column="2"
                        Text="Chủ Xe:"
                           FontWeight="Bold"
                        Margin="0,5,10,5"/>
                <TextBox Grid.Row="0"
                        Grid.Column="3"
                        x:Name="OwnerNameTextBox"
                         Margin="0,5"
                        IsReadOnly="True"/>

                <!-- Date & Time Selection -->
                <TextBlock Grid.Row="1"
                        Grid.Column="0"
                        Text="Ngày Kiểm Định:"
                           FontWeight="Bold"
                        Margin="0,5,10,5"/>
                <DatePicker Grid.Row="1"
                        Grid.Column="1"
                        x:Name="InspectionDatePicker"
                            Margin="0,5,10,5"/>


                <!-- Station Selection -->
                <TextBlock Grid.Row="1"
                        Grid.Column="2"
                        Text="Cơ sở Kiểm Định:"
                           FontWeight="Bold"
                        Margin="0,5,10,5"/>
                <ComboBox Grid.Row="1"
                        Grid.Column="3"
                        x:Name="StationComboBox"
                          Margin="0,5"
                          DisplayMemberPath="Name"
                          SelectedValuePath="StationId"/>
                <!-- Inspector Selection -->
                <TextBlock Grid.Row="2"
                        Grid.Column="0"
                        Text="Nhân Viên Kiểm Định:"
                           FontWeight="Bold"
                        Margin="0,5,10,5"/>
                <ComboBox Grid.Row="2"
                        Grid.Column="1"
                        x:Name="InspectorComboBox"
                          Margin="0,5,10,5"
                          DisplayMemberPath="FullName"
                          SelectedValuePath="UserId"/>

                <TextBlock Grid.Row="2"
                        Grid.Column="2"
                        Text="Ghi Chú:"
                           FontWeight="Bold"
                        Margin="0,5,10,5"/>
                <TextBox Grid.Row="2"
                        Grid.Column="3"
                        x:Name="NotesTextBox"
                         Margin="0,5"
                        TextWrapping="Wrap"/>
            </Grid>
        </GroupBox>

     

        <!-- Action Buttons -->
        <StackPanel Grid.Row="4"
                Orientation="Horizontal"
                    HorizontalAlignment="Right"
                Margin="0,15,0,0">
            <Button x:Name="ClearButton"
                    Content="Nhập Lại"
                    Padding="15,8"
                    Margin="0,0,10,0"
                    Background="#F0F0F0"
                    Click="ClearButton_Click"/>
            <Button x:Name="ScheduleButton"
                    Content="Lưu Lịch Kiểm Định"
                    Padding="15,8"
                    Background="#2E75B6"
                    Foreground="White"
                    Click="ScheduleButton_Click"/>
        </StackPanel>
    </Grid>
</UserControl>